{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
      "builder": "NIXPACKS",
      "nixpacksPlan": {
          "providers": ["python"]
      },
      "buildCommand": "npm ci"
    },
    "deploy": {
      "startCommand": "gunicorn budgetapp.wsgi",
      "restartPolicyType": "ON_FAILURE",
      "restartPolicyMaxRetries": 10
    }
  }